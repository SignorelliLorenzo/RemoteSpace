@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<style>
    img{
         width:200px; 
        border-radius: 50%;
        height:200px; 
        border: solid 2px #ced4da;
        margin-top:120px;
    }
    .loginbtn
    {
        width:150px;
        font-weight: 300;
        letter-spacing: 2px;  
        font-size: 15px; 
        color:black; 
        background-color:white;
        border-color: #ced4da;
        padding:2px 12px;
    }
</style>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div style="text-align:center; font-weight: 300;letter-spacing: 2px;  font-size: 34px;" >REGISTER</div>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group" style="text-align:center">
                    <button type="submit" class="btn loginbtn">REGISTER</button>
                </div>
                <div class="form-group" style="text-align:center">
                        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Already registered?</a>
                </div>
            
        </form>
    </div>
    <div class="col-md-auto" style="text-align: center">
        <img src="~/Img/user-registration.png"/>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
